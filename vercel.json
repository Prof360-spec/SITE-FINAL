{
    "version": 2,
    "builds": [
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/auth/(.*)",
        "dest": "/public/auth/$1"
      },
      {
        "src": "/assets/(.*)",
        "dest": "/public/assets/$1"
      },
      {
        "src": "/",
        "dest": "/public/index.html"
      },
      {
        "src": "/(.*)", 
        "dest": "/public/404.html"
      }
    ]
  }